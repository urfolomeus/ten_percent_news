<h1>Sign In</h1>

<%= form_tag '/signin' do %>
  <div class="row">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div class="row">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="row">
    <%= submit_tag 'Sign In' %>
  </div>
<% end %>
